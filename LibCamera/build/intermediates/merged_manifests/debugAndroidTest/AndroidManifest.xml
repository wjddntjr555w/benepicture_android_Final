<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.cameraview.test" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <instrumentation
        android:name="android.support.test.runner.AndroidJUnitRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.google.android.cameraview.test"
        android:targetPackage="com.google.android.cameraview.test" />

    <application android:debuggable="true" >
        <activity android:name="com.google.android.cameraview.CameraViewActivity" />

        <uses-library android:name="android.test.runner" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>