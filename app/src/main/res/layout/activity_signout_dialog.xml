<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fly_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_alpha_black2">

    <LinearLayout
        android:id="@+id/lly_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/xml_dialog_bg"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <com.bene.pictures.ui.widget.BaseTextView
            android:id="@+id/txv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="비밀번호를 입력해주세요."
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.bene.pictures.ui.widget.BaseEditText
            android:id="@+id/edt_pwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/xml_bg3_rect_ffffff_stroke"
            android:gravity="center_vertical"
            android:hint="비밀번호를 입력"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/color_ff595959"
            android:textColorHint="@color/color_ffbdbdbd"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lly_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/xml_round_bottom_white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <com.bene.pictures.ui.widget.BaseTextView
                    android:id="@+id/txv_yes"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="닫기"
                    android:textColor="@color/color_black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <com.bene.pictures.ui.widget.BaseTextView
                    android:id="@+id/txv_no"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="탈퇴하기"
                    android:textColor="@color/basic_bg"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
