<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_bg"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_mark"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/color_ff25d367"
                />

            <ImageView
                android:id="@+id/imv_face"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_default_people" />

            <com.bene.pictures.ui.widget.BaseTextView
                android:id="@+id/txv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:maxLines="2"
                android:maxWidth="100dp"
                android:text="홍길동"
                android:textColor="@color/color_black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <com.bene.pictures.ui.widget.BaseTextView
                    android:id="@+id/txv_no"
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/xml_btn_round_rect_bdbdbd"
                    android:gravity="center"
                    android:text="선물거절"
                    android:textColor="@color/color_ffffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.bene.pictures.ui.widget.BaseTextView
                    android:id="@+id/txv_yes"
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/xml_round_rect_blue_small"
                    android:gravity="center"
                    android:text="선물받기"
                    android:textColor="@color/color_ffffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/color_ff757575"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>