<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bene.pictures.ui.widget.BaseTextView
                android:id="@+id/txv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="응모권번호 : 삼성갤럭시58663"
                android:textColor="@color/color_ff757575"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.bene.pictures.ui.widget.BaseTextView
                    android:id="@+id/txv_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="작성날자 : 2019.08.24"
                    android:textColor="@color/color_ff757575"
                    android:textSize="13sp" />

                <com.bene.pictures.ui.widget.BaseTextView
                    android:id="@+id/txv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="당첨금액 : 5,000원"
                    android:textColor="@color/color_ff757575"
                    android:textSize="13sp" />
            </LinearLayout>

        </FrameLayout>

        <com.bene.pictures.ui.widget.BaseTextView
            android:id="@+id/txv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="70dp"
            android:text="내용입니다."
            android:textColor="@color/color_ff757575"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#e0e0e0"
            android:visibility="visible"/>
    </FrameLayout>
</LinearLayout>