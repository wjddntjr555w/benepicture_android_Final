<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_bg"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/bg_winter_subscribe"
    android:paddingLeft="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_mark"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/color_ff25d367"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#acacac"
        android:visibility="gone"/>

    <com.bene.pictures.ui.widget.BaseTextView
        android:id="@+id/txv_ad_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/imv_mark"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="상품권"
        android:textColor="@color/color_ff616161"
        android:textSize="12sp" />

<!--    <com.bene.pictures.ui.widget.BaseTextView-->
<!--        android:id="@+id/txv_usr_id"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/txv_ad_name"-->
<!--        android:layout_alignStart="@+id/txv_ad_name"-->
<!--        android:layout_marginTop="2dp"-->
<!--        android:ellipsize="end"-->
<!--        android:maxLines="1"-->
<!--        android:text="회원아이디"-->
<!--        android:textColor="@color/color_ff616161"-->
<!--        android:textSize="12sp" />-->

    <com.bene.pictures.ui.widget.BaseTextView
        android:id="@+id/txv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_ad_name"
        android:text="asdfasdfasdf"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_ff757575"
        android:textSize="12sp" />

    <com.bene.pictures.ui.widget.BaseTextView
        android:id="@+id/txv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txv_phone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:textColor="@color/color_ff757575"
        android:textSize="12sp" />

    <com.bene.pictures.ui.widget.BaseTextView
        android:id="@+id/txv_subscribe_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txv_phone"
        android:layout_alignStart="@+id/txv_ad_name"
        android:layout_marginBottom="5dp"
        android:textColor="@color/color_ff757575"
        android:textSize="12sp" />

</RelativeLayout>